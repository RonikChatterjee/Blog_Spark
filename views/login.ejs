<link rel="stylesheet" href="/css/components/login.css">
<script defer type="module" src="/js/login.js"></script>
<div class="login-backdrop">
    <form class="glassomorphic login-container" id="login-form">
        <div class="login-header">
            <h3>Login</h3>
        </div>
        <div class="login-promo">
            <h4>Welcome Back,
                <span class="highlight">Storyteller</span>
            </h4>
            <p>Your audience is waiting for your next masterpiece</p>
            <ul>
                <li>Continue Writing</li>
                <li>Track Analytics</li>
                <li>Engage Readers</li>
                <li>Manage Content</li>
            </ul>
        </div>
        <div class="login-content">
            <ul class="login-field-options">
                <li class="login-items">
                    <label for="email">Email</label>
                    <input type="email" name="email" placeholder=" " id="email">
                </li>
                <li class="login-items">
                    <label for="password">Password</label>
                    <input type="password" name="password" placeholder=" " id="password">
                </li>
            </ul>
        </div>
        <div class="login-footer">
            <button class="btn login-btn" id="login-btn">Log In</button>
            <a class="forgot-password" href="user/forgot-password">Forgot Password?</a>
            <a class="login-links" href="/user/signup">Don't have an account? Sign Up</a>
        </div>
        <div class="separator">or</div>
        <div class="login-options-container">
            <ul class="login-options">
                <li><img src="/svg/googleIcon.svg" alt="google-icon"></li>
                <li><img src="/svg/githubIcon.svg" alt="github-icon"></li>
                <li><img src="/svg/facebookIcon.svg" alt="facebook-icon"></li>
            </ul>
        </div>
    </form>
</div>
